{
  "name": "root",
  "version": "0.0.0",
  "description": "Framework agnostic organism-level UI kit. A collection of components and utilities to build web applications with ease.",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/nazahex/kazaura",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazahex/kazaura.git"
  },
  "author": "Kazviz <kaz@kazviz.com> (https://kazviz.com)",
  "bugs": {
    "url": "https://github.com/nazahex/kazaura/issues"
  },

  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",

    "check": "biome check && dprint check",
    "format": "biome check --write && dprint fmt",

    "test": "turbo run test --continue",
    "bench": "bun apps/bench/tools/aggregate.ts",
    "coverage": "turbo run test --continue -- --coverage",

    "ci": "bun run clean && bun run build && bun run check && bun run test",
    "postinstall": "lefthook install"
  },

  "packageManager": "bun@1.3.2",
  "workspaces": [
    "packages/components/*/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@lokat/solid": "~0.1.2",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "dprint": "^0.51.1",
    "lefthook": "^2.0.4",
    "packlet": "^0.3.2",
    "happy-dom": "^14.10.1",
    "solid-js": "^1.9.10",
    "tinybench": "^6.0.0",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },

  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
